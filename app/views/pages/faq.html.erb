</div>

<script>
$(document).ready(function(){
    $('.link-faq').on('click', function(e) {
    e.preventDefault();
    var $this = $(this);
    var $collapse = $this.closest('.collapse-group').find('.collapse');
    $collapse.collapse('toggle');
});
});
</script>
