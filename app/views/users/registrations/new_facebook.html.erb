<div style="background-image: url('<%= image_url('bg_section.jpg')%>'); background-size: cover; min-height: 500px;">
  <div class="container">
    <div class="margin top bottom">
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <h1>Complete seu cadastro</h1>
          <%= simple_form_for(@user, url: :user_registration) do |f| %>
            <%= hidden_field_tag('social', true) %>
            <%= hidden_field_tag('user[uid]', @user.uid) %>
            <%= hidden_field_tag('user[image]', @user.image) %>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.input :email, input_html: { class: 'form-control', readonly: 'readonly', tabindex: 1 } %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.input :name, input_html: { class: 'form-control', readonly: 'readonly', tabindex: 2 } %>
                </div>
              </div>
            </div>
            <%= f.simple_fields_for :address do |p| %>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <%= p.input :zipcode, label: 'CEP', input_html: { class: 'form-control', tabindex: 3, data: { "search-address-path" => search_address_users_path, zipcode: true, helper: "#zipcode-helper" } } %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= p.input :address, label: 'Endereço', input_html: { class: 'form-control', tabindex: 4, data: {:"zipcode-callback" => "address"} } %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= p.input :number, label: 'Número', input_html: { class: 'form-control', tabindex: 5 } %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <%= p.input :city, label: 'Cidade', input_html: { class: 'form-control', tabindex: 6, data: {:"zipcode-callback" => "city"} } %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= p.input :state, label: 'Estado', input_html: { class: 'form-control', tabindex: 7, data: {:"zipcode-callback" => "state"} } %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= p.input :district, label: 'Bairro', input_html: { class: 'form-control', tabindex: 8, data: {:"zipcode-callback" => "district"} } %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <%= p.input :country, label: 'País', input_html: { class: 'form-control', tabindex: 9, data: {:"zipcode-callback" => "country"} } %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= f.input :phone, label: 'Telefone', input_html: { class: 'form-control', tabindex: 10 } %>
                </div>
              </div>
            </div>
            <% end %>
            <div class="form-group text-center">
              <%= f.submit 'Cadastrar', class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){ $('[name="user[address_attributes][zipcode]"]').focus();});
</script