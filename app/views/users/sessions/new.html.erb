<div style="background-image: url('<%= image_url('bg_section.jpg')%>'); background-size: cover; min-height: 500px;">
  <div class="container">
    <div class="margin top bottom">
      <div class="row">
        <div class="col-md-6">
          <h2>Já está cadastrado?</h2>
          <%= form_for(:user, :url => session_path(:user)) do |f| %>
            <div class="form-group">
              <%= f.text_field :email, placeholder: 'E-mail', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, placeholder: 'Senha',  class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <div class="actions">
              <%= f.submit 'Entrar', class: 'btn btn-primary' %>
            </div>
            <%= link_to "Esqueceu sua senha?", new_password_path(:user) %>
          <% end %>
          <%= link_to user_omniauth_authorize_path(:facebook), id: "sign_in_facebook", title: 'Facebook'  do %>
            FACEBOOK
          <% end %>
        </div>
        <div class="col-md-6">
          <h2>Ainda não está cadastrado?</h2>
          <%= link_to 'Cadastrar Novo Usuário', new_user_registration_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>