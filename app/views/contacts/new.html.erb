<div style="background-image: url('<%= image_url('bg_section.jpg')%>'); background-size: cover;">
  <section class="section-box" style="padding: 20px;">
    <div class="container">
      <div class="row">
        <div class="col-md-7 contact">
          <h2 class="red">Contato</h2>
          <hr></hr>
          <h4>Preencha os campos abaixo para enviar sua solicitação de contato.</h4>
          <div class="row">
            <div class="col-md-12">
              <div class="col-md-12">
                <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                  <div class="form-group">
                    <label>Nome</label>
                    <input type="name" class="form-control" placeholder="Nome" name="contact[name]">
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Email"  name="contact[email]">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Assunto</label>
                    <select class="form-control" name="contact[subject]">
                      <option selected>Selecione o assunto</option>
                      <option value="Dúvidas">Dúvidas</option>
                      <option value="Problema no Pagamento">Problema no Pagamento</option>
                      <option value="Sugestões">Sugestões</option>
                      <option value="Reclamações">Reclamações</option>
                      <option value="Outro">Outro</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label>Mensagem</label>
                    <textarea class="form-control" rows="5" name="contact[message]"></textarea>
                  </div>
                  <!-- <div class="form-group">
                    <label for="exampleInputFile">Anexos</label>
                    <input type="file" id="exampleInputFile">
                    <p class="help-block">Adicione arquivos a sua solicitação</p>
                  </div> -->
                  <button type="submit" class="btn btn-contact">Enviar</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
