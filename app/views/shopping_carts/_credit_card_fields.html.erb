<div data-credit-card-infos>
  <h2>Dados do Cartão de Crédito</h2>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <label class="control-label" for="user_credit_card_attributes_name">
          Nome do titular do cartão (Ex: João da Silva)
        </label>
        <input class="form-control" type="text" name="credit_card[name]" id="user_credit_card_attributes_name">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label" for="user_credit_card_attributes_number">
          Parcelamento
        </label>
        <select name="order[parcelas]" class="form-control">
          <option value="1"> 1 x <%= number_to_currency(current_user.shopping_cart.total) %></option>
          <% if current_user.shopping_cart.split? %>
            <% (2..12).each do |i| %>
              <option value="<%= i %>"> <%= i %> x <%= number_to_currency(current_user.shopping_cart.total/i) %></option>
            <% end %>
          <% end %>
        </select>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <label class="control-label" for="user_credit_card_attributes_number">
          Número do cartão de crédito
        </label>
        <input class="form-control" maxlength="16" size="16" type="text" name="credit_card[number]" id="user_credit_card_attributes_number">
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label" for="user_credit_card_attributes_number">
          Bandeira
        </label>
        <select name="order[bandeira]" class="form-control">
          <option value="Visa">Visa</option>
          <option value="Mastercard">Mastercard</option>
          <option value="AmericanExpress">American Express</option>
          <option value="Diners">Diners</option>
          <option value="Hipercard">Hipercard</option>
          <option value="Hiper">Hiper</option>
          <option value="Elo">Elo</option>
        </select>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label" for="user_credit_card_attributes_expiration_month">
          Mês de validade
        </label>
        <select class="form-control" name="credit_card[expiration_month]" id="user_credit_card_attributes_expiration_month">
          <option value=""></option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
        </select>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label" for="user_credit_card_attributes_expiration_year">
          Ano de validade
        </label>
        <select class="form-control" name="credit_card[expiration_year]" id="user_credit_card_attributes_expiration_year">
          <option value=""></option>
          <% (Time.current.year..(Time.current.year+10)).each do |i| %>
            <option value="<%= i %>"><%= i %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label class="control-label" for="user_credit_card_attributes_cvv">
          CVV
        </label>
        <input class="form-control" maxlength="3" size="3" type="text" name="credit_card[cvv]" id="user_credit_card_attributes_cvv">
        <p class="help-block">Encontra-se atrás do cartão</p>
      </div>
    </div>
  </div>
</div>